<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HackHeroesApp.Page9">
    <FlexLayout Padding="10" Direction="Column" JustifyContent="SpaceBetween" AlignItems="Center">
        <Image Aspect="AspectFill" Source="background.png" x:Name="FrontImage" />
        <Label x:Name="LabelText" FontSize="25" HorizontalTextAlignment="Start"/>
        <Grid ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"  Text="Cofnij" x:Name="Cofnij" Clicked="Cofnij_Clicked"/>
            <Button Grid.Column="1" Text="Następny" x:Name="Nastepny" Clicked="Nastepny_Clicked"/>
        </Grid>
    </FlexLayout>
</ContentPage>