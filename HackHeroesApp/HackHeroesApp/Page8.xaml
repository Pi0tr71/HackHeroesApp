             x:Class="HackHeroesApp.Page8"
             Padding="0,5,0,0">

    <FlexLayout x:Name="Gridd" Direction="Column" Padding="10" JustifyContent="SpaceBetween">
        <Image Grid.Row="1" Grid.ColumnSpan="4" Source="background.png" Aspect="AspectFit" x:Name="PytanieZdj"/>
        <Button Grid.Row="2" Grid.ColumnSpan="4" x:Name="button1" Clicked="button1_Clicked"/>
        <Button Grid.Row="3" Grid.ColumnSpan="4" x:Name="button2" Clicked="button2_Clicked"/>
        <Button Grid.Row="4" Grid.ColumnSpan="4" x:Name="button3" Clicked="button3_Clicked"/>
        <Button Grid.Row="5" Grid.ColumnSpan="4" x:Name="button4" Clicked="button4_Clicked"/>
    </FlexLayout>
</ContentPage>