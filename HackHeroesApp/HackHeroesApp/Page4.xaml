        <!-- Nie chciało mi się dodawać łącza do rankingu więc tu jest podgląd -->
        <ScrollView>
            <ListView x:Name="UserRankingList" SeparatorColor="LightGray" VerticalOptions="FillAndExpand"
                          HorizontalOptions="FillAndExpand" >
                <ListView.Header>
                    <FlexLayout Padding="10, 20" Direction="Row" AlignItems="Center" JustifyContent="SpaceBetween" BackgroundColor="#3160ad" HorizontalOptions="FillAndExpand">
                        <Label Text="Miejsce" MinimumWidthRequest="40" HorizontalTextAlignment="Center" FontAttributes="Bold" TextColor="White" FontSize="Medium" VerticalOptions="Center" />
                        <Label Text="Użytkownik" TextColor="White" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Center"/>
                        <Label Text="Poziom" MinimumWidthRequest="40" HorizontalTextAlignment="Center" FontAttributes="Bold" TextColor="White" FontSize="Medium" VerticalOptions="Center"/>
                    </FlexLayout>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:UserModel">
                        <ViewCell>
                            <FlexLayout Padding="10, 0" Direction="Row" AlignItems="Center" JustifyContent="SpaceBetween" BackgroundColor="#ffffff" HorizontalOptions="FillAndExpand">
                                <Label Text="{Binding RankingPlace}" MinimumWidthRequest="40" HorizontalTextAlignment="Center" TextColor="Gold" FontSize="16" VerticalOptions="Center" />
                                <Label Text="{Binding Login}" TextColor="Black" FontSize="12" FontAttributes="Bold" VerticalOptions="Center"/>
                                <Label Text="{Binding Level}" MinimumWidthRequest="40" HorizontalTextAlignment="Center" TextColor="Black" FontSize="10" VerticalOptions="Center"/>
                            </FlexLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
    </ContentPage>
    <ContentPage Padding="0,20,0,0" Title="Nauka" IconImageSource="https://img.icons8.com/color/48/000000/bookmark--v2.png">
        <RelativeLayout>
            <Button BackgroundColor="#f7f7f7" x:Name="banner" BorderRadius="30" FontSize="30"  FontAttributes="Bold" TextColor="CornflowerBlue" Text="Kurs do egzaminu teoretycznego" Clicked="KursT"
			RelativeLayout.HeightConstraint="{ConstraintExpression 
				Type=RelativeToParent,
				Property=Height,
				Factor=0.31}"
			RelativeLayout.WidthConstraint="{ConstraintExpression
				Type=RelativeToParent,
				Property=Width,
				Factor=1}" />
            <Button BackgroundColor="#f7f7f7" x:Name="banner2" BorderRadius="30" FontSize="30"  FontAttributes="Bold" TextColor="CornflowerBlue" Text="Kurs do egzaminu teoretycznego"
			RelativeLayout.YConstraint="{ConstraintExpression 
				Type=RelativeToView,
				ElementName=banner,
				Property=Height,
				Factor=1,
                Constant=20}"
            RelativeLayout.HeightConstraint="{ConstraintExpression 
				Type=RelativeToParent,
				Property=Height,
				Factor=0.31}"
			RelativeLayout.WidthConstraint="{ConstraintExpression
				Type=RelativeToParent,
				Property=Width,
				Factor=1}" />
            <Button BackgroundColor="#f7f7f7" x:Name="banner3" BorderRadius="30" FontSize="30"  FontAttributes="Bold" TextColor="CornflowerBlue" Text="Kurs do egzaminu teoretycznego"
			RelativeLayout.YConstraint="{ConstraintExpression 
				Type=RelativeToView,
				ElementName=banner,
				Property=Height,
				Factor=2,
                Constant=40}"
            RelativeLayout.HeightConstraint="{ConstraintExpression 
				Type=RelativeToParent,
				Property=Height,
				Factor=0.31}"
			RelativeLayout.WidthConstraint="{ConstraintExpression
				Type=RelativeToParent,
				Property=Width,
				Factor=1}" />
        </RelativeLayout>
    </ContentPage>
    <ContentPage Padding="0,20,0,0" Title="Testy" IconImageSource="https://img.icons8.com/color/48/000000/scroll.png">
        <RelativeLayout>
            <Button BackgroundColor="#f7f7f7" x:Name="test1" BorderRadius="30" FontSize="30"  FontAttributes="Bold" TextColor="CornflowerBlue" Text="Kurs do egzaminu teoretycznego"
			RelativeLayout.HeightConstraint="{ConstraintExpression 
				Type=RelativeToParent,
				Property=Height,
				Factor=0.31}"
			RelativeLayout.WidthConstraint="{ConstraintExpression
				Type=RelativeToParent,
				Property=Width,
				Factor=1}" />
            <Button BackgroundColor="#f7f7f7" x:Name="test2" BorderRadius="30" FontSize="30"  FontAttributes="Bold" TextColor="CornflowerBlue" Text="Kurs do egzaminu teoretycznego"
			RelativeLayout.YConstraint="{ConstraintExpression 
				Type=RelativeToView,
				ElementName=test1,
				Property=Height,
				Factor=1,
                Constant=20}"
            RelativeLayout.HeightConstraint="{ConstraintExpression 
				Type=RelativeToParent,
				Property=Height,
				Factor=0.31}"
			RelativeLayout.WidthConstraint="{ConstraintExpression
				Type=RelativeToParent,
				Property=Width,
				Factor=1}" />
            <Button BackgroundColor="#f7f7f7" x:Name="test3" BorderRadius="30" FontSize="30"  FontAttributes="Bold" TextColor="CornflowerBlue" Text="Kurs do egzaminu teoretycznego"
			RelativeLayout.YConstraint="{ConstraintExpression 
				Type=RelativeToView,
				ElementName=test1,
				Property=Height,
				Factor=2,
                Constant=40}"
            RelativeLayout.HeightConstraint="{ConstraintExpression 
				Type=RelativeToParent,
				Property=Height,
				Factor=0.31}"
			RelativeLayout.WidthConstraint="{ConstraintExpression
				Type=RelativeToParent,
				Property=Width,
				Factor=1}" />
        </RelativeLayout>
    </ContentPage>
</TabbedPage>
