<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
			BackgroundColor="Gray"
			NavigationPage.HasNavigationBar="false"
			Title="Page1"
			xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HackHeroesApp.Page1">
    <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Image Source="background.png" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All" Aspect="AspectFill"></Image>
        <StackLayout AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All" BackgroundColor="Transparent" VerticalOptions="Center" Spacing="20">
            <Label 
			Text="Witaj w HackHeroesApp"
			TextColor="White"
			FontSize="30" 
			FontAttributes="Bold"  
			HorizontalOptions="Center" />
            <Label 
			Text="Aplikacji dzieki, której zdasz!" 
			TextColor="White"
			FontSize="18" 
			HorizontalOptions="Center" />
            <StackLayout Margin="30,60,30,0">
                <Button 
			Text="Logowanie" 
			TextColor="White"
            CornerRadius="10"
            Clicked="LoginPage"/>
            </StackLayout>
            <StackLayout Margin="30,0,30,0">
                <Button 
			Text="Rejestracja" 
			TextColor="White"
            CornerRadius="10"
            Clicked="RegisterPage"/>
            </StackLayout>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>